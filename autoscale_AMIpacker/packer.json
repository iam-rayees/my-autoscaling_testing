{
    "variables": {
        "aws_access_key": "",
        "aws_secret_key": "",
        "region": "",
        "source_ami": "",
        "instance_type": "",
        "vpc_id": "",
        "subnet_id": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "access_key": "{{user `aws_access_key`}}",
            "secret_key": "{{user `aws_secret_key`}}",
            "region": "{{user `region`}}",
            "source_ami": "{{user `source_ami`}}",
            "instance_type": "{{user `instance_type`}}",
            "ssh_username": "ubuntu",
            "associate_public_ip_address": true,
            "ami_name": "mohd-rayeez-build-{{isotime | clean_resource_name}}",
            "vpc_id": "{{user `vpc_id`}}",
            "subnet_id": "{{user `subnet_id`}}",
            "tags": {
                "Name": "mohd-rayeez-build-{{isotime | clean_resource_name}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sleep 20",
                "sudo apt-get update -y",
                "sudo apt-get install -y software-properties-common",
                "sudo add-apt-repository --yes ppa:ansible/ansible",
                "sudo apt-get update -y",
                "sudo apt-get install -y ansible python3-apt nginx git stress",
                "sudo git clone https://github.com/iam-rayees/my-autoscaling_testing.git /myrepo",
                "ansible-playbook /myrepo/playbook.yaml"
            ]
        }
    ]
}